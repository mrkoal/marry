@font-face 
    font-family 'Broadway BT'
    font-style normal
    font-weight normal
    src local('Broadway BT'), url('Broadway.woff') format('woff')


html
    height 100%
    font-size 62.5%

body
    height 100%
    background-color #3b0104
    background-repeat repeat-y
    background-size 100% auto
    background-position 0 .5em
    background-image url(img/bg1x.png)
    background-image -webkit-image-set(url(img/bg1x.png) 1x,url(img/bg2x.png) 2x)       
    font 100%/1.5 Hiragino Sans GB, WenQuanYi Micro Hei,arial,s('\5B8B\4F53'),sans-serif
    color #333
    overflow-x hidden

a
    color #333

    &:hover
        color #f10180

header
    position relative
    height 5.63em
    padding-right 10%
    color #fff
    font-size 2em
    line-height 7em
    text-shadow 0 0 .5em #fff,0 0 .3em #de1900,0 0 .2em #ffe5a8
    text-align right

    p
        overflow hidden
        height 100%

    span
        font-family 'Broadway BT'

    img
        position absolute
        height 6em
        left 0
        top 0

article
    position relative
    font-size 1em
    padding 2em 2em 1em
    margin .5em 1.5em 2em
    color #e72900
    border-radius 5em
    background-color: #FFF
    -webkit-filter drop-shadow(0 0 1.5em rgba(255,255,255,.8))
    z-index 5

    strong
        display block
        font-size 1.6em
        line-height 1.5em
        text-indent 1em

    p
        font-size 1.3em
        text-indent 2em
        line-height 1.5em

    .indent0
        text-indent 0

    i
        position absolute
        display block
        width 0
        height 0
        left 2em
        top -2em
        border-width 0 2em 4em 
        border-style solid
        border-color transparent transparent #fff
        z-index -1   

    img
         display block
         width 99%
         margin .5em auto

    a
        display block
        color #e72900
        text-decoration underline
    
    span[type tel]
        text-decoration none
        padding-left 0

figure
    position relative
    font-size 1em
    height 22em
    margin-bottom 1.5em

    img
        box-shadow 0 0 8px #000
        border-radius 1px

    .img1
        position absolute
        left 1.8em
        top 0
        height 55%
        -webkit-transform rotate(-7deg)
        z-index 4

    .img2
        position absolute
        right 1.8em
        top 0
        height 49%
        -webkit-transform rotate(5deg)
        z-index 3

    .img3
        position absolute
        left 2.3em
        top 50%
        height 52%
        -webkit-transform rotate(-8deg)
        z-index 2

    .img4
        position absolute
        right 2.2em
        bottom 0
        height 100%
        -webkit-transform rotate(4deg)
        z-index 1

.tac
    text-align center

.last
    padding-top 0
    background none
    color #fff

    p
        margin-bottom .5em
        text-indent 0

    a
        display inline-block
        color #fff